{
    // Define globals exposed by node.js
    "node": true,

    // No bitwise operators allowed
    "bitwise": true,
    // Allow snake_case variables
    "camelcase": false,
    // Don't always require braces
    "curly": false,
    // Prefer === and !===
    "eqeqeq": true,
    // Don't need es3
    "es3": false,
    // Require for (.. in ..) loops to check hasOwnProperty
    "forin": true,
    // Prohibit immediate function invocation without parens
    "immed": true,
    // We use 4 space indents
    "indent": 4,
    // Don't allow using a variable before it's defined (Explicit Hoisting)
    "latedef": true,
    // Constructor functions must be capitalize
    "newcap": true,
    // Prohibit arguments.caller/callee
    "noarg": true,
    // Warn on empty blocks
    "noempty": true,
    // Don't allow nbsp chars
    "nonbsp": true,
    // No side-effect new invocations
    "nonew": true,
    // Prohibit ++ and --
    "plusplus": false,
    // Always use single quotes
    "quotmark": "single",
    // Prohibit undefined variables
    "undef": true,
    // Warn on unused vars
    "unused": "vars",
    // Must declare strict mode
    "strict": true,
    // Enforce 80 char line length
    "maxlen": 80,
    // Prohibit trailing whitespace
    "trailing": true,
    // Code complexity (disable all, for now)
    "maxparams": false,
    "maxdepth": false,
    "maxstatements": false,
    "maxcomplexity": false,

    "asi": false,
    "boss": false,
    "debug": false,
    "eqnull": false,
    "esnext": true,
    "evil": false,
    "expr": false,
    "funcscope": false,
    "globalstrict": false,
    "iterator": false,
    "lastsemic": false,
    "laxbreak": false,
    "laxcomma": false,
    "loopfunc": false,
    "maxerr": 20,
    "multistr": false,
    "notypeof": false,
    "proto": false,
    "scripturl": false,
    "shadow": false,
    "sub": true,
    "supernew": false,
    "validthis": false,
    "noyield": false,

    "mocha": true
}
